# VANTA Environment Configuration Example
# Copy this file to .env and fill in your actual values

# API Keys
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional, if using GPT-4o
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# System Configuration
VANTA_SYSTEM_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Voice Settings
VANTA_MICROPHONE_DEVICE_INDEX=  # Leave blank for default device
VANTA_TTS_SERVICE=elevenlabs  # elevenlabs, google, azure, system
VANTA_STT_SERVICE=whisper  # whisper, google, azure

# LLM Settings
VANTA_LLM_SERVICE=claude  # claude, gpt
VANTA_LLM_MODEL=claude-3-sonnet-20240229

# Personality Settings
VANTA_PERSONALITY_DEFAULT_PROFILE=default  # Profile name from config/personality_profiles/

# Memory Settings
VANTA_MEMORY_VECTOR_DB_PATH=data/vector_db